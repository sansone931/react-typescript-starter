{
  "name": "react-typescript-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "start": "webpack serve --config webpack.dev.ts",
    "build": "webpack --config webpack.prod.ts",
    "build:analyze": "ANALYZE=1 npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "lint:fix": "eslint --fix '**/*.{js,ts,tsx}'",
    "format": "prettier --write '**/*.{js,ts,tsx,md,html,json}'",
    "format:check": "prettier --check '**/*.{js,ts,tsx,md,html,json}'",
    "typecheck": "tsc --noEmit",
    "storybook": "start-storybook --no-open -p 9000",
    "build:storybook": "build-storybook"
  },
  "dependencies": {
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "styled-components": "^5.3.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/builder-webpack5": "^6.5.12",
    "@storybook/manager-webpack5": "^6.5.12",
    "@storybook/react": "^6.5.12",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.0",
    "@testing-library/user-event": "^13.1.9",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.11.10",
    "@types/react": "^16.14.8",
    "@types/react-dom": "^16.9.13",
    "@types/styled-components": "^5.1.10",
    "@types/webpack": "^5.28.0",
    "@types/webpack-bundle-analyzer": "^4.4.0",
    "@types/webpack-dev-server": "^3.11.4",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jest-dom": "^3.9.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-storybook": "^0.6.4",
    "eslint-plugin-testing-library": "^4.6.0",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^8.0.0",
    "jest": "^27.0.6",
    "jest-styled-components": "^7.0.4",
    "lint-staged": "^13.0.3",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.41.1",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,ts,tsx,md,html,json}": "prettier --write"
  }
}
