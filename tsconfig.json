{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ES2015",
    "moduleResolution": "Node",
    "outDir": "dist",
    "jsx": "react",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
