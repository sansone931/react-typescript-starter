{
  "compilerOptions": {
    "target": "ES2015",
    "moduleResolution": "Node",
    "outDir": "dist",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
